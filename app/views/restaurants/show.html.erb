<nav class="navbar navbar-light bg-light" role="navigation">
  <div class="container-fluid">
    <h1 class=navbar-brand"><%= @restaurant.name %></h1>
    <div class="btn-group" role="group" aria-label="Basic example">
      <%= link_to 'New Review', new_restaurant_review_path(@restaurant.id), class: " btn btn-outline-primary" %>
      <%= link_to 'Back', restaurants_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</nav>

<h2>Info</h2>
<p>Address: <%= @restaurant.address %></p>
<p>Phone Number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>

<br>

<h2>Reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>Review (<%= review.rating %>): <%= review.content %> </li>
  <% end %>
</ul>
